<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.dsoftware.ghtoolbar</id>
    <name>GitHub Actions Toolbar</name>
    <vendor>D Software</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.github</depends>

    <idea-version since-build="221.5080.210"/>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="GitHub Actions"
            icon="com.dsoftware.ghtoolbar.ui.Icons.WorkflowAllToolbar"
            anchor="bottom"
            factoryClass="com.dsoftware.ghtoolbar.ui.GhActionsToolWindowFactory"/>
        <console.folding
            implementation="com.dsoftware.ghtoolbar.ui.panels.GhActionConsoleFolding"/>
        <projectConfigurable
            parentId="tools"
            instance="com.dsoftware.ghtoolbar.ui.settings.GhActionsToolbarConfigurable"
            />
    </extensions>
    <actions>
        <action
            id="ShowGithubSettings"
            class="com.dsoftware.ghtoolbar.actions.ShowGithubSettingsAction"/>
        <action
            id="ShowGhActionsToolbarSettings"
            class="com.dsoftware.ghtoolbar.actions.ShowToolbarSettingsAction"
            icon="AllIcons.General.Settings"
        />
        <group id="GHWorkflows.ActionGroup" popup="false">
            <action id="Github.Workflow.List.Reload"
                    class="com.dsoftware.ghtoolbar.actions.ReloadRunsListAction"
                    use-shortcut-of="Refresh"/>
        </group>

        <group id="Github.Workflow.ToolWindow.List.Popup">
            <reference id="Github.Workflow.List.Reload"/>
        </group>

        <group id="Github.Workflow.ToolWindow.List.Popup.Selected">
            <action id="Github.Workflow.Open.In.Browser"
                    class="com.dsoftware.ghtoolbar.actions.WorkflowOpenInBrowserAction"/>
            <action id="Github.Workflow.Rerun"
                    class="com.dsoftware.ghtoolbar.actions.RerunWorkflowAction"/>
            <reference id="Github.Workflow.List.Reload"/>
        </group>
        <group id="Github.ToolWindow.JobList.Popup">
<!--            <reference id="Github.Workflow.JobList.Reload"/>-->
        </group>

        <group id="Github.ToolWindow.JobList.Popup.Selected">
            <action id="Github.Workflow.Jobs.Open.In.Browser"
                    class="com.dsoftware.ghtoolbar.actions.JobOpenInBrowserAction"/>

<!--            <reference id="Github.Workflow.Jobs.List.Reload"/>-->
        </group>

        <group id="Github.Workflow.Log.ToolWindow.List.Popup">
            <action id="Github.Workflow.Log.List.Reload"
                    class="com.dsoftware.ghtoolbar.actions.ReloadLogAction"/>
        </group>

    </actions>

</idea-plugin>
